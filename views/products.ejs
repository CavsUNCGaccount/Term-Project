    <head>
        <meta charset="utf-8">
        <title>PlayStation Nation - Products</title>
        <link rel="stylesheet" href="styles/styles.css">
        <script src="/public/js/products.js"></script>
    </head>

    <body>

        <header>

            <%- include('partials/_navbar', { user: user }) %>

            <h1><u>PlayStation Nation</u></h1>

            <h3>Your journey to greatness starts here.</h3>

            <% if (user) { %>
                <p>Hello, <%= user.displayName %>!</p>
            <% } %>              

        </header>

        <main>
            <h1>All Products</h1>
        
            <div class="products-container">
                <% if (products && products.length > 0) { %>
                    <% products.forEach(function(product) { %>
                      <div class="product-card">
                        <img src="<%= product.Image_Url %>" alt="<%= product.Name %>">
                        <h3><%= product.Name %></h3>
                        <p>Price: $<%= product.Price %></p>
                        <p>Stock: <%= product.Stock %></p>
                        <button class="add-to-cart-button" data-product-id="<%= product.Id %>">Add to Cart</button>
                      </div>
                    <% }); %>
                  <% } else { %>
                    <p>No products available at the moment.</p>
                <% } %>
            </div>
        </main>        

        <footer class="pre-format">
            Copyright Â© 2024 PlayStation Nation
            PlayStation Nation Productions
            All rights reserved
        </footer>

    </body>

</html>
