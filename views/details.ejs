<head>
    <meta charset="utf-8">
    <title>PlayStation Nation - Product Details</title>
    <link rel="stylesheet" href="/styles/styles.css">
    <script src="/js/details.js" defer></script>
</head>

<body>

    <header>
        <%- include('partials/_navbar') %>
        <h1><u>PlayStation Nation</u></h1>
        <h3>Your journey to greatness starts here.</h3>
    </header>

    <main>
        <section class="product-details">
            <div class="product-image">
                <img src="/<%= product.Image_Url %>" alt="<%= product.Name %>">
            </div>

            <div class="product-info">
                <h2><%= product.Name %></h2>
                <h3>$<%= product.Price.toFixed(2) %></h3>
                <p>
                    <%= product.Description %>
                </p>

                <!-- Stock Availability -->
                <p><b>Stock:</b> <%= product.Stock %> </p>

                <button class="add-to-cart" data-id="<%= product.Id %>">Add to Cart</button>
            </div>
        </section>
    </main>

    <footer class="pre-format">
        Copyright Â© 2024 PlayStation Nation
        PlayStation Nation Productions
        All rights reserved
    </footer>

</body>

</html>